@using EntityLayer.Concrete

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Hakkında</h4>
                <div class="d-flex mt-5 align-items-top">
                    <div>@ViewBag.veri</div>
                    @foreach (var item in Model)
                    {


                        <img src="@item.ImageUrl" class="img-sm rounded-circle me-3" alt="image">
                        <div class="mb-0 flex-grow">
                            <h5 class="me-2 mb-2">@item.NameSurname - @item.Email</h5>
                            <p class="mb-0 font-weight-light">@item.</p>
                        </div>
                    }
                    <div class="ms-auto">
                        <i class="mdi mdi-heart-outline text-muted"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>